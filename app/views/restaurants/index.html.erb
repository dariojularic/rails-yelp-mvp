  <div class="d-flex justify-content-center">
    <h1>List of restaurants</h1>
  </div>
  <div class="d-flex justify-content-center">
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %></li>
      <% end %>
    </ul>
  </div>
</div>
